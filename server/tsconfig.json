{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext", "es2020"],
    "noImplicitAny": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "jsx": "preserve",
    "outDir": "./dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
